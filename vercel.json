{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "src/modules/**/*", "use": "@vercel/static" },
    { "src": "src/shared/**/*", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/src/modules/landing/index.html" },
    {
      "src": "/privacy-policy",
      "dest": "/src/modules/privacy-policy/index.html"
    },
    { "src": "/support", "dest": "/src/modules/support/index.html" },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/src/shared/(.*)",
      "dest": "/src/shared/$1"
    },
    {
      "src": "/src/modules/(.*)",
      "dest": "/src/modules/$1"
    }
  ]
}
